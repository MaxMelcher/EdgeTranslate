{
  "name": "Azure Translate",
  "version": "0.0.0.2",
  "manifest_version": 3,
  "description": "Using Azure Translate in Edge/Chrome",
  "icons": {
    "16": "icons/azure16x16.png",
    "32": "icons/azure32x32.png",
    "48": "icons/azure48x48.png",
    "128": "icons/azure128x128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["https://api.cognitive.microsofttranslator.com/"],
  "background": {
    "service_worker": "background.js"
  }
}